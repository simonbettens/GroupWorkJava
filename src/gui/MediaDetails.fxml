<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<fx:root id="light-background" alignment="CENTER"
	minHeight="750.0" minWidth="600.0" prefHeight="750.0" prefWidth="600.0"
	stylesheets="@../styles/styles.css" type="VBox"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox id="grey-background" alignment="CENTER" prefHeight="250.0"
			prefWidth="100.0">
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<children>
				<Label fx:id="lblNaam" alignment="CENTER" text="Sessie naam" />
				<HBox fx:id="lblStart" alignment="CENTER" prefHeight="24.0"
					prefWidth="568.0">
					<children>
						<Label text="Start datum">
							<HBox.margin>
								<Insets right="20.0" />
							</HBox.margin>
						</Label>
						<Label fx:id="lblEind" text="Eind datum" />
					</children>
				</HBox>
				<Separator prefWidth="200.0"
					style="-fx-background-color: black;">
					<VBox.margin>
						<Insets bottom="5.0" />
					</VBox.margin>
				</Separator>
				<GridPane alignment="CENTER">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="276.4000244140625" minWidth="10.0"
							prefWidth="124.79998779296875" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="512.3999481201172" minWidth="10.0"
							prefWidth="443.6000122070312" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<TextField fx:id="txtNaam" GridPane.columnIndex="1"
							GridPane.rowIndex="1" />
						<TextField fx:id="txfBestandNaam"
							promptText="Bv.  &quot;foto.jpg&quot; of  &quot;https://www.youtube.com/embed/...&quot;"
							GridPane.columnIndex="1" GridPane.rowIndex="2" />

						<ComboBox fx:id="cbType" prefHeight="25.0"
							prefWidth="214.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
						<Label text="Naam :" GridPane.rowIndex="1" />
						<Label text="Media Type :" GridPane.rowIndex="3" />
						<Label text="Bestand naam :  " GridPane.rowIndex="2" />
					</children>
					<VBox.margin>
						<Insets bottom="5.0" />
					</VBox.margin>
				</GridPane>
				<Separator prefWidth="200.0"
					style="-fx-background-color: black;" />
				<Button fx:id="btnVerwijder" mnemonicParsing="false"
					onAction="#verwijder" styleClass="verwijderButton"
					text="Verwijder media">
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
					</VBox.margin>
				</Button>
			</children>
		</VBox>
		<HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
			<children>
				<Button fx:id="btnOpslaan" mnemonicParsing="false"
					onAction="#opslaan" styleClass="greyButton" text="Maak media">
					<HBox.margin>
						<Insets right="5.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="btnAnnuleer" mnemonicParsing="false"
					onAction="#annuleer" styleClass="greyButton" text="Annuleer" />
			</children>
		</HBox>
	</children>
</fx:root>
