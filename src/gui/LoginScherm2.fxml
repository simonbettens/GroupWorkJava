                  <Image url="@../images/itLab.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </left>
   <right>
      <AnchorPane fx:id="rightAnchorPane" minHeight="400.0" minWidth="355.0" nodeOrientation="LEFT_TO_RIGHT" onMouseClicked="#rightPaneClicked" prefHeight="500.0" prefWidth="355.0" scaleShape="false" style="-fx-background-color: #313131;" BorderPane.alignment="CENTER_RIGHT">
