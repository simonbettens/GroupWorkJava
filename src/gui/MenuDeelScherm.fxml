      </ImageView>
      <Button fx:id="btnStart" mnemonicParsing="false" onAction="#switchStart" styleClass="rich-blue" stylesheets="@../styles/styles.css" text="StartPagina">
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Button>
      <Button fx:id="btnSessieKalender" minHeight="30.0" minWidth="135.0" mnemonicParsing="false" onAction="#switchSessieKalender" styleClass="rich-blue" text="SessieKalender">
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Button>
      <Button id="-" fx:id="btnRaadPleegStat" minHeight="30.0" minWidth="135.0" mnemonicParsing="false" onAction="#switchRaadPleegStat" styleClass="rich-blue" text="Statistieken">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="btnBeheerGebruiker" minHeight="30.0" minWidth="135.0" mnemonicParsing="false" onAction="#switchGebruikers" styleClass="rich-blue" text="Gebruikers">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="btnAankondiging" alignment="CENTER" contentDisplay="CENTER" minHeight="30.0" minWidth="135.0" mnemonicParsing="false" onAction="#switchAankondiging" styleClass="rich-blue" text="Aankondigingen">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="7.0" left="7.0" right="7.0" top="80.0" />
         </VBox.margin>
      </Button>
   </children>
</fx:root>
