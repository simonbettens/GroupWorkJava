<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root id="light-background" minHeight="750.0" minWidth="600.0" prefHeight="750.0" prefWidth="600.0" stylesheets="@../styles/styles.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<HBox alignment="CENTER" prefHeight="56.0" prefWidth="600.0" style="-fx-border-color: black; -fx-border-radius: 20;">
			<children>
				<ComboBox fx:id="cbAcademiejaar" prefHeight="25.0" prefWidth="190.0" promptText="Kalender jaar" translateX="-15.0">
					<HBox.margin>
						<Insets left="33.0" right="33.0" />
					</HBox.margin>
				</ComboBox>
            <ComboBox fx:id="cbMaand" prefHeight="25.0" prefWidth="110.0" promptText="maand">
               <HBox.margin>
                  <Insets left="33.0" right="33.0" />
               </HBox.margin>
            </ComboBox>
            <ComboBox fx:id="cbSessie" editable="true" prefHeight="25.0" prefWidth="190.0" promptText="Sessie">
               <HBox.margin>
                  <Insets left="33.0" right="33.0" />
               </HBox.margin>
            </ComboBox>
			</children>
			<VBox.margin>
				<Insets bottom="20.0" top="20.0" />
			</VBox.margin>
		</HBox>
      <BarChart fx:id="aanwezighedenChart" prefHeight="632.0" prefWidth="600.0" title="Aanwezigheden Sessie">
        <xAxis>
          <CategoryAxis label="Sessie" side="BOTTOM" fx:id="xAs">
               <tickLabelFont>
                  <Font name="Verdana" size="30.0" />
               </tickLabelFont>
            </CategoryAxis>
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAs" autoRanging="false" label="Aanwezigheden" prefWidth="61.0" side="LEFT" upperBound="30.0">
               <tickLabelFont>
                  <Font size="30.0" />
               </tickLabelFont>
            </NumberAxis>
        </yAxis>
      </BarChart>
	</children>
</fx:root>
