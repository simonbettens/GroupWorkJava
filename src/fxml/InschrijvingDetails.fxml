<fx:root id="light-background" alignment="CENTER" minHeight="750.0" minWidth="600.0" prefHeight="750.0" prefWidth="600.0" stylesheets="@../styles/styles.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Inschrijving details :" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <VBox id="grey-background" alignment="CENTER" prefHeight="250.0" prefWidth="534.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label fx:id="lblNaam" alignment="CENTER" text="Sessie naam" />
            <HBox alignment="CENTER" prefHeight="24.0" prefWidth="568.0">
               <children>
                  <Label fx:id="lblStart" text="Start datum">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lblEind" text="Eind datum" />
               </children>
            </HBox>
            <Separator prefWidth="200.0" style="-fx-background-color: black;">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Separator>
            <GridPane alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="276.4000244140625" minWidth="10.0" prefWidth="124.79998779296875" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="512.3999481201172" minWidth="10.0" prefWidth="443.6000122070312" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <TextField fx:id="txfVolledigeNaam" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="txfGebruikernaam" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Volledige naam :" GridPane.rowIndex="1" />
                  <Label text="Gebruikersnaam :" GridPane.rowIndex="2" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                     <children>
                        <CheckBox fx:id="chAanwezig" disable="true" mnemonicParsing="false" text="Heeft zich aanwezig gesteld" />
                        <CheckBox fx:id="chAanwezigBevestigd" mnemonicParsing="false" text="Aanwezigheid was bevestigd" />
                     </children>
                  </HBox>
                  <Label text="Email :" GridPane.rowIndex="3" />
                  <TextField fx:id="txfEmail" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </GridPane>
            <Separator prefWidth="200.0" style="-fx-background-color: black;" />
            <Button fx:id="btnVerwijder" mnemonicParsing="false" onAction="#verwijder" styleClass="verwijderButton" text="Verwijder inschrijving">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnOpslaan" mnemonicParsing="false" onAction="#opslaan" styleClass="greyButton" text="Sla aanpassingen op">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnAnnuleer" mnemonicParsing="false" onAction="#annuleer" styleClass="greyButton" text="Annuleer" />
         </children>
      </HBox>
   </children>
</fx:root>
