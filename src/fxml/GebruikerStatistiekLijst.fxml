<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root id="light-background" prefHeight="750.0" prefWidth="600.0" stylesheets="@../styles/styles.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" prefHeight="20.0" prefWidth="758.0" text="Statistieken voor Gebruikers" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0">
         <children>
            <Button fx:id="btnSessies" mnemonicParsing="false" onAction="#swichtSessies" styleClass="greyButton" text="Statistieken Sessies">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Button disable="true" mnemonicParsing="false" styleClass="greyButton" text="Statistieken Gebruikers">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="53.0" prefWidth="600.0">
         <children>
            <ComboBox fx:id="chSessiekalender" onAction="#switchSessiekalender" prefWidth="200.0" promptText="Sessiekalender">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </ComboBox>
            <ComboBox fx:id="chMaand" onAction="#switchMaand" prefWidth="200.0" promptText="Maand">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="65.0" prefWidth="600.0">
         <children>
            <TextField fx:id="txfZoek" alignment="CENTER" onKeyReleased="#search" prefWidth="350.0" promptText="Zoek op naam van de Gebruiker">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="btnMaakLeeg" disable="true" mnemonicParsing="false" onAction="#maakLeeg" text="Maak Leeg" />
         </children>
      </HBox>
      <TableView fx:id="tbGebruikers" prefHeight="620.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="colNaam" prefWidth="75.0" text="Naam" />
            <TableColumn fx:id="colUsername" prefWidth="75.0" text="Gebruikersnaam" />
            <TableColumn fx:id="colType" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="colStatus" prefWidth="75.0" text="Status" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</fx:root>
