<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root id="light-background" alignment="TOP_CENTER" minHeight="750.0" minWidth="600.0" prefHeight="750.0" prefWidth="600.0" stylesheets="@../styles/styles.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<HBox alignment="CENTER" prefHeight="31.0" prefWidth="600.0">
			<children>
				<Label text="Overzicht van de media :" textFill="WHITE">
					<font>
						<Font name="System Bold" size="14.0" />
					</font>
					<HBox.margin>
						<Insets left="7.0" top="7.0" />
					</HBox.margin>
				</Label>
            <Button fx:id="btnGaTerug" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#gaTerug" styleClass="greyButton" text="Ga terug">
               <HBox.margin>
                  <Insets left="20.0" top="7.0" />
               </HBox.margin>
            </Button>
			</children>
		</HBox>
				<Label fx:id="lblSessieNaam" text="Naam Sessie" textFill="WHITE">
					<font>
						<Font name="System Bold Italic" size="14.0" />
					</font>
				</Label>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
			<children>
				<TextField fx:id="txfZoek" alignment="CENTER" onKeyReleased="#search" prefWidth="350.0" promptText="Zoek op naam">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</TextField>
				<Button fx:id="btnMaakLeeg" disable="true" mnemonicParsing="false" onAction="#maakLeeg" styleClass="greyButton" text="Maak leeg" />
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
			<children>
				<Button fx:id="btnNieuw" mnemonicParsing="false" onAction="#nieuwMedia" styleClass="greyButton" text="Maak media item">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<ComboBox fx:id="cbType" onAction="#changeTypeMedia" prefWidth="150.0" promptText="Kies type" />
			</children>
		</HBox>
		<TableView fx:id="mediaTable" prefHeight="622.0" prefWidth="600.0">
			<columns>
				<TableColumn fx:id="naamCol" prefWidth="75.0" text="Naam" />
				<TableColumn fx:id="colTijd" prefWidth="75.0" text="Tijd toegevoegd" />
				<TableColumn fx:id="colType" prefWidth="75.0" text="Type media" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</children>
</fx:root>
