<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root id="light-background" alignment="CENTER" prefHeight="750.0" prefWidth="600.0" stylesheets="@../styles/styles.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" prefHeight="20.0" prefWidth="758.0" text="Statistieken voor Sessies" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0">
         <children>
            <Button disable="true" mnemonicParsing="false" styleClass="greyButton" text="Statistieken Sessies">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnGebruikers" mnemonicParsing="false" onAction="#switchGebruikers" styleClass="greyButton" text="Statistieken Gebruikers">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="53.0" prefWidth="600.0">
         <children>
            <ComboBox fx:id="chSessiekalender" onAction="#switchSessiekalender" prefWidth="200.0" promptText="Sessiekalender">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </ComboBox>
            <ComboBox fx:id="chMaand" onAction="#switchMaand" prefWidth="200.0" promptText="Maand">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <Button fx:id="btnSelecteer" mnemonicParsing="false" onAction="#selecteer" styleClass="greyButton" text="Selecteer">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </Button>
      <TableView fx:id="tbSessies" prefHeight="661.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="colStart" prefWidth="75.0" text="Startdatum" />
          <TableColumn fx:id="colTitel" prefWidth="75.0" text="Titel" />
            <TableColumn fx:id="colVerantwoordelijke" prefWidth="75.0" text="Verantwoordelijke" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</fx:root>
