<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root id="light-background" minHeight="750.0" minWidth="600.0" prefHeight="750.0" prefWidth="600.0" stylesheets="@../styles/styles.css" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="46.0" prefWidth="600.0">
         <children>
            <Label text="Overzicht van de feedback :" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="7.0" top="7.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="btnGaTerug" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#gaTerug" styleClass="greyButton" text="Ga terug">
               <HBox.margin>
                  <Insets left="20.0" top="7.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label fx:id="lblNaam" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="613.0" text="Naam Sessie" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="59.0" prefWidth="600.0">
         <children>
            <TextField fx:id="txfSearch" alignment="CENTER" onAction="#search" prefWidth="350.0" promptText="Geef de naam van de gebruiker in">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="btnMaakLeeg" disable="true" mnemonicParsing="false" onAction="#maakLeeg" styleClass="greyButton" text="Maak leeg" />
         </children>
      </HBox>
      <TableView fx:id="tableFeedback" prefHeight="653.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="colNaam" prefWidth="75.0" text="Volledige naam" />
          <TableColumn fx:id="colTijd" prefWidth="75.0" text="Tijd toegevoegd" />
            <TableColumn fx:id="colRating" prefWidth="75.0" text="Rating" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</fx:root>
