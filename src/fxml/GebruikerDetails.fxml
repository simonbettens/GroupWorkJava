               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </GridPane>
            <Separator prefWidth="200.0" style="-fx-background-color: black;" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Separator>
            <Label fx:id="lblError" text="Error" textFill="RED">
               <font>
                  <Font name="System Bold" size="12.0" />
